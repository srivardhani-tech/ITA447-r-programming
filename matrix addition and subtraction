a<-matrix(c(1,2,3,4,5,6,7,8,9),nrow=3,ncol=3,byrow=TRUE)
b<-matrix(c(2,4,6,8,1,3,4,2,1),nrow=3,ncol=3,byrow=TRUE)
print(a+b)
print(a-b)

output:

> a<-matrix(c(1,2,3,4,5,6,7,8,9),nrow=3,ncol=3,byrow=TRUE)
> b<-matrix(c(2,4,6,8,1,3,4,2,1),nrow=3,ncol=3,byrow=TRUE)
> print(a+b)
     [,1] [,2] [,3]
[1,]    3    6    9
[2,]   12    6    9
[3,]   11   10   10
> print(a-b)
     [,1] [,2] [,3]
[1,]   -1   -2   -3
[2,]   -4    4    3
[3,]    3    6    8

